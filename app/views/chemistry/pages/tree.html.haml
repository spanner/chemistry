%div{id: "page_#{page.id}"}
  - if 
  %a.toggle
    %svg.icon
      %use{"xlink:href" => "/chemistry-sprite.svg#cms_next_bare"}

  %span.detail.saved
    %a.page
      %svg.icon.page
        %use.content{:href => "/chemistry-sprite.svg#cms_#{style}"}
      %span.title
        = page.title
      %span.path
        = page.path

    %span.actions
      %a.delete
        %svg.icon
          %use{:href => "/chemistry-sprite.svg#cms_cross_button"}
      %a.review{:target => "_blank"}
        %svg.icon
          %use{:href => "/chemistry-sprite.svg#cms_show_button"}
